<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/channelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_small"
        tools:text="Канал 1" />
    <ImageView
        android:id="@+id/delete_program"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_delete"
        android:layout_alignParentEnd="true"
        />
    </RelativeLayout>

    <TextView
        android:id="@+id/channelStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="28dp"
        android:text="@string/create_receipt_channel_status"
        style="@style/Title"
        />

    <Switch
        android:id="@+id/channelStatusSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/pulseFormTextView"
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_receipt_pulse_form"
        />

    <TextView
        android:id="@+id/pulseFormValueTextView"
        style="@style/Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="26dp"

        android:text="@string/create_receipt_pulse_form_not_chosen" />


    <TextView
        android:id="@+id/bipolarRegimeTextView"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="21dp"
        android:text="@string/create_receipt_bipolar_regime" />


    <Switch
        android:id="@+id/bipolarRegimeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/amperageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/create_receipt_seek_bar_margin_top"
        android:paddingTop="@dimen/create_receipt_seek_bar_margin_bottom"
        android:text="@string/create_receipt_amperage_format"
        style="@style/Title" />


    <SeekBar
        android:id="@+id/amperageSeekBar"
        style="@style/CreateReceiptSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/pulseDurabilityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/create_receipt_seek_bar_margin_top"
        android:paddingTop="@dimen/create_receipt_seek_bar_margin_bottom"
        style="@style/Title"
        android:text="@string/create_receipt_pulse_durability_format"
        />


    <SeekBar
        android:id="@+id/pulseDurabilitySeekBar"
        style="@style/CreateReceiptSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/pulsePauseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/create_receipt_seek_bar_margin_top"
        android:paddingTop="@dimen/create_receipt_seek_bar_margin_bottom"
        style="@style/Title"
        android:text="Длительность паузы = %s мс"
        />


    <SeekBar
        android:id="@+id/pulsePauseSeekBar"
        style="@style/CreateReceiptSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/pulseFrequencyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/create_receipt_seek_bar_margin_top"
        android:paddingTop="@dimen/create_receipt_seek_bar_margin_bottom"
        style="@style/Title"
        android:text="@string/create_receipt_pulse_frequency_format"
        />

    <SeekBar
        android:id="@+id/pulseFrequencySeekBar"
        style="@style/CreateReceiptSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>