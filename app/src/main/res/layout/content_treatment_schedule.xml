<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/fragment_treatment">

    <TextView
        android:id="@+id/treatmentScheduleTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        android:paddingTop="44dp"
        android:text="@string/treatment_schedule"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/treatmentScheduleRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="48dp"
        android:paddingStart="48dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/treatmentScheduleTitleTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible" />
</merge>