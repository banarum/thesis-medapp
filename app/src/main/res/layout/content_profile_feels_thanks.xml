<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileFeelsThanksLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/profile_feels_layout_height"
    android:layout_marginTop="@dimen/profile_pain_level_margin_top"
    android:visibility="gone"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="@dimen/profile_card_corner_radius"
    app:cardUseCompatPadding="false"
    app:contentPaddingBottom="@dimen/profile_feels_card_padding_bottom"
    app:contentPaddingLeft="@dimen/profile_feels_thanks_padding_side"
    app:contentPaddingRight="@dimen/profile_feels_thanks_padding_side"
    app:contentPaddingTop="@dimen/profile_feels_title_padding_top"
    tools:showIn="@layout/fragment_profile"
    tools:visibility="visible">

    <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profileFeelsThanksImageView"
            android:layout_width="@dimen/profile_feels_thank_image_size"
            android:layout_height="@dimen/profile_feels_thank_image_size"
            android:src="@drawable/ic_feels_thanks"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/profileFeelsThanksTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_horizontal"
            android:paddingBottom="23dp"
            android:paddingTop="8dp"
            android:text="@string/profile_feels_thanks"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileFeelsThanksImageView" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
        