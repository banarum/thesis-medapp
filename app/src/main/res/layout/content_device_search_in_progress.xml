<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/deviceSearchInProgressLayout"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:paddingEnd="@dimen/device_search_side_padding"
                                             android:paddingStart="@dimen/device_search_side_padding"
                                             android:visibility="gone"
                                             app:layout_constraintTop_toBottomOf="@+id/device_search_title"
                                             tools:visibility="visible">

    <TextView
        android:id="@+id/deviceSearchInProgressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingEnd="@dimen/device_search_side_padding"
        android:paddingStart="@dimen/device_search_side_padding"
        android:text="@string/device_search_in_progress_text"
        android:textColor="@color/sync_text"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/deviceSearchInProgressImageView"
        android:layout_width="219dp"
        android:layout_height="219dp"
        android:src="@drawable/pic_device_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone"/>

</android.support.constraint.ConstraintLayout>