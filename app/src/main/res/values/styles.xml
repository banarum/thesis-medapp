<resources>

    <!--THEMES-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="fontFamily">@font/roboto_regular</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="actionModeCloseDrawable">@drawable/ic_arrow_back</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/ActionModeTitleTextStyle</item>
    </style>

    <style name="ActionModeTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.MainActivity">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@color/white</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="PopupToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--STYLES-->
    <style name="ToolbarStyle" parent="Base.Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="popupTheme">@style/PopupToolbarTheme</item>
    </style>

    <style name="AuthEditText">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:background">@drawable/bg_auth_edit_text</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:paddingStart">@dimen/auth_edit_text_side_padding</item>
    </style>

    <style name="ClickableTextView" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AuthButton" parent="@style/Button">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@drawable/bg_auth_button</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AuthRegisterEditText">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColorHint">@color/auth_register_edit_text_hint_color</item>
        <item name="android:layout_marginStart">@dimen/auth_register_padding_left</item>
        <item name="android:layout_marginEnd">@dimen/auth_register_padding_right</item>
    </style>

    <style name="Button">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/auth_register_title</item>
    </style>

    <style name="Subtitle">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/subtitle</item>
    </style>

    <style name="AuthRegisterTitle" parent="@style/Title">
        <item name="android:paddingStart">@dimen/auth_register_padding_left</item>
        <item name="android:paddingEnd">@dimen/auth_register_padding_right</item>
    </style>

    <style name="AuthRegisterText" parent="@style/Subtitle">
        <item name="android:paddingStart">@dimen/auth_register_padding_left</item>
        <item name="android:paddingEnd">@dimen/auth_register_padding_right</item>
    </style>

    <style name="SettingsTitle">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/settings_title_text_color</item>
    </style>

    <style name="SettingsSubtitle">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/settings_subtitle</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/settings_dialog_message_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/settings_dialog_message_text</item>
    </style>

    <style name="ProfileButton">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@drawable/bg_profile_button</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CreateReceiptSeekBar">
        <item name="android:thumb">@drawable/bg_create_receipt_seek_bar_thumb</item>
        <item name="android:thumbTint">@color/colorPrimary</item>
        <item name="android:progressTint">@color/colorPrimary</item>
        <item name="android:secondaryProgressTint">@color/grey_26</item>
    </style>

</resources>
